<Window x:Class="CarsBD.SearchCarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SearchCarWindow" Height="200" Width="300">
    <Grid Margin="10">
        <Label Content="Марка:" VerticalAlignment="Top"/>
        <TextBox x:Name="marcaTextBox" VerticalAlignment="Top" Margin="60,0,0,0"/>

        <Label Content="Модель:" VerticalAlignment="Top" Margin="0,30,0,0"/>
        <TextBox x:Name="modelTextBox" VerticalAlignment="Top" Margin="60,30,0,0"/>

        <Label Content="Номер:" VerticalAlignment="Top" Margin="0,60,0,0"/>
        <TextBox x:Name="numberTextBox" VerticalAlignment="Top" Margin="60,60,0,0"/>

        <Label Content="Статус:" VerticalAlignment="Top" Margin="0,90,0,0"/>
        <TextBox x:Name="statusTextBox" VerticalAlignment="Top" Margin="60,90,0,0"/>

        <Button Content="Поиск" Click="searchButton_Click" Margin="10,120,110,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Button Content="Отмена" Click="cancelButton_Click" Margin="110,120,10,0" VerticalAlignment="Top" HorizontalAlignment="Right"/>
    </Grid>
</Window>


